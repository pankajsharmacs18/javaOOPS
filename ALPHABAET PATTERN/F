package cpract;
import java.lang.*;
import java.util.Scanner;

public class Cparact {
    
public void fPattern(int length){
    for (int i = 0; i <length ; i++) {
        if(i==0 || i==length/2){
            for (int j = 0; j <length ; j++) {
                System.out.print("*");
            }
        }
        else{
            System.out.println("*");
        }

    }
}



    public static void main(String... pankajSharma ) throws Exception {
        Scanner input = new Scanner(System.in);
        System.out.println("Plase enter length of charecter");
        int length = input.nextInt();
        Cparact obj = new Cparact();
     obj.fPattern(length);
    }

    }


