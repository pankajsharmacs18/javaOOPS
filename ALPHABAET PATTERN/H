package cpract;
import java.lang.*;
import java.util.Scanner;

public class Cparact {
   
    public void hPattern(int length){
        for (int i = 0; i <length ; i++) {
            if (i==length/2){
                for (int j = 0; j <length ; j++) {
                    System.out.print("*");

                }
            }
            for (int j = 0; j <length ; j++) {
                if(j==length-1 || j==0){
                    System.out.print("*");
                }
                System.out.print(" ");
            }
            System.out.println();


            }

        }
    


    public static void main(String... pankajSharma ) throws Exception {
        Scanner input = new Scanner(System.in);
        System.out.println("Plase enter length of charecter");
        int length = input.nextInt();
        Cparact obj = new Cparact();
      
        obj.hPattern(length);
   
    }

    }


