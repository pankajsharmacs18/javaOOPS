package cpract;
import java.lang.*;
import java.util.Scanner;

public class Cparact {
   
        public <e> void ePattern(int length) throws Exception {

                if (length < 5 && length % 2 != 0) {
                    throw new Exception("enter valid even value grtter then 5");
                }
                else{

                    for (int i = 0; i <= length; i++) {
                        if (i == 0 || i == length / 2 || i == length) {
                            for (int j = 0; j < length; j++) {
                                System.out.print("*");
                            }
                        } else {
                            System.out.println("*");
                        }
                    }
                }
            }




    public static void main(String... pankajSharma ) throws Exception {
        Scanner input = new Scanner(System.in);
        System.out.println("Plase enter length of charecter");
        int length = input.nextInt();
        Cparact obj = new Cparact();
    
    obj.ePattern(length);
    }

    }


